<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/beige"
tools:context=".DetailActivity">

<TextView
    android:id="@+id/center_detail_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:text="보호소 정보"
    android:textSize="30sp"
    android:textColor="#000000"
    android:fontFamily="@font/bmjua" />

<Button
    android:id="@+id/center_detail_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/center_detail_name"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:fontFamily="@font/bmjua"
    android:background="@color/skyblue"
    android:text="전화 걸기"
    android:onClick="call"/>

    <ImageView
        android:id="@+id/center_detail_image"
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:layout_below="@id/center_detail_button"
        android:layout_marginTop="-80dp" />

    <LinearLayout
    android:id="@+id/bottom_navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:background="#ffffff"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="홈"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_home"/>

    <Button
        android:id="@+id/button_board"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="게시판"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_board"/>

    <Button
        android:id="@+id/button_quiz"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="퀴즈"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_quiz"/>

    <Button
        android:id="@+id/button_mypage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="마이페이지"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_mypage"/>
</LinearLayout>

</RelativeLayout>