<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CenterListActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/center_search_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:queryHint="검색할 내용을 입력하세요"
        android:background="@color/skyblue2"/>

    <ListView
        android:id="@+id/center_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/center_search_view"
        android:layout_marginTop="0dp"
        android:background="@color/beige"/>

    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="홈"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_home"/>

        <Button
            android:id="@+id/button_board"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="게시판"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_board"/>

        <Button
            android:id="@+id/button_quiz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="퀴즈"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_quiz"/>

        <Button
            android:id="@+id/button_mypage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="마이페이지"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_mypage"/>
    </LinearLayout>

</RelativeLayout>